{
  "name": "axior-os-v2",
  "version": "0.7.27",
  "homepage": "https://dotvibe.dev",
  "repository": "https://github.com/vhybzOS/.vibe",
  "tasks": {
    "test": "deno test --allow-all tests/",
    "test:verbose": "deno test --allow-all tests/ -v",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "coverage": "deno test --allow-all tests/ --coverage=cov_profile && deno coverage cov_profile"
  },
  "imports": {
    "effect": "npm:effect@3.16.7",
    "commander": "npm:commander@12.1.0",
    "zod/v4": "npm:zod@3.25.66",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.14",
    "@std/cli": "jsr:@std/cli@^1.0.8",
    "@std/toml": "jsr:@std/toml@^1.0.1"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-explicit-any", "require-await"]
    }
  }
}
