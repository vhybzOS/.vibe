{
  "name": "vibe",
  "version": "1.0.0",
  "exports": {
    "./cli": "./cli.ts"
  },
  "tasks": {
    "vibe": "deno run --allow-all cli.ts",
    "test": "deno test --allow-all test.ts",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build": "deno compile --allow-all --output vibe cli.ts"
  },
  "imports": {
    "effect": "npm:effect@3.16.7",
    "commander": "npm:commander@12.1.0",
    "zod/v4": "npm:zod@3.25.66",
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.14"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "exclude": [
    "node_modules/",
    "legacy/"
  ]
}